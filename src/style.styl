$font-color = #2c3e50
$background-color = #fff
$second-background-color = #f0f0f0
$shadowColor = #ccc
$component-interval = 12px
$box-border-radius = 6px


html, body {
  position relative
  padding 0
  margin 0
  width 100%
  height 100%
  color $font-color
}


ul,
li,
ol {
  padding 0
  margin 0
  list-style none
}


* {
  &::-webkit-scrollbar {
    height 6px
    width 6px
    border-radius $box-border-radius
  }

  &::-webkit-scrollbar-thumb {
    background rgba(0, 0, 0, 0.36)
  }

  &::-webkit-scrollbar-track {
    background transparent
  }
}


.flex-center {
  display flex
  justify-content center
  align-items center
}

.page-container {
  width 100%
  height 100%
  box-sizing border-box
  padding 30px
  background $background-color
  border-radius $box-border-radius
  overflow-y auto
}


.page-title {
  font-size 28px
  font-weight bold
  padding 20px
}


.el-dropdown-menu__item {
  padding 5px 10px
}
